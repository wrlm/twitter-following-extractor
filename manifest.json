{
  "manifest_version": 3,
  "name": "X Following Extractor",
  "version": "1.1",
  "description": "Extract following list from X (formerly Twitter)",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ]
}